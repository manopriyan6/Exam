#include <iostream>
using namespace std;

class Number {
  private:
    int value;
  public:
    Number(int v = 0) {
      value = v;
    }
    Number operator-() {
      Number temp(-value);
      return temp;
    }
    friend Number operator+(Number n) {
      return n;
    }
    void display() {
      cout << "Value: " << value << endl;
    }
};

int main() {
  Number n1(10), n2(-5);
  
  -n1; // using member function
  
  n2 = +n2; // using friend function
  
  n1.display();
  n2.display();
  
  return 0;
}
