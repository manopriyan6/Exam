#include <iostream>
#include <fstream>
using namespace std;

void copyFile(const string& sourceFile, const string& destinationFile) {
    ifstream source(sourceFile);
    ofstream destination(destinationFile);

    char ch;
    while (source.get(ch)) {
        destination.put(ch);
    }

    cout << "File copied successfully!" << endl;

    source.close();
    destination.close();
}

int main() {
    string sourceFile, destinationFile;

    cout << "Enter the name of the source file: ";
    cin >> sourceFile;

    cout << "Enter the name of the destination file: ";
    cin >> destinationFile;

    // Copy the content of the source file to the destination file
    copyFile(sourceFile, destinationFile);

    return 0;
}
